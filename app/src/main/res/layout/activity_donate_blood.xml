<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/rounddesign1"
    tools:context=".DonateBloodActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textColor="#000000"
            android:gravity="center_horizontal"
            android:text="Enter the details"
            android:textSize="30sp" />

        <EditText
            android:id="@+id/donorName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#C0C0C0"
            android:layout_margin="10dp"
            android:hint="Name" />

        <EditText
            android:id="@+id/donorAge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#C0C0C0"
            android:layout_margin="10dp"
            android:hint="Age"
            android:inputType="numberDecimal" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:textColor="#000000"
            android:text="Gender: " />

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp">

            <RadioButton
                android:id="@+id/maleRadioButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#C0C0C0"
                android:text="Male" />

            <RadioButton
                android:id="@+id/femaleRadioButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#C0C0C0"
                android:text="Female" />
        </RadioGroup>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:textColor="#000000"
            android:text="Phone:" />

        <EditText
            android:id="@+id/donorPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#C0C0C0"
            android:layout_margin="10dp"
            android:hint="Example: 9876543210"
            android:inputType="numberDecimal" />


        <EditText
            android:id="@+id/donorAddress"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_margin="10dp"
            android:textColor="#C0C0C0"
            android:hint="Address"
            android:inputType="text|textMultiLine" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:textColor="#000000"
            android:text="Blood Group:" />

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1">

                    <RadioButton
                        android:id="@+id/aPosRadioButton"
                        android:layout_width="match_parent"
                        android:textColor="#C0C0C0"
                        android:layout_height="wrap_content"
                        android:text="A+" />

                    <RadioButton
                        android:id="@+id/aNegRadioButton"
                        android:layout_width="match_parent"
                        android:textColor="#C0C0C0"
                        android:layout_height="wrap_content"
                        android:text="A-" />

                    <RadioButton
                        android:id="@+id/bPosRadioButton"
                        android:layout_width="match_parent"
                        android:textColor="#C0C0C0"
                        android:layout_height="wrap_content"
                        android:text="B+" />

                    <RadioButton
                        android:id="@+id/bNegRadioButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#C0C0C0"
                        android:text="B-" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1">

                    <RadioButton
                        android:id="@+id/abPosRadioButton"
                        android:layout_width="match_parent"
                        android:textColor="#C0C0C0"
                        android:layout_height="wrap_content"
                        android:text="AB+" />

                    <RadioButton
                        android:id="@+id/abNegRadioButton"
                        android:layout_width="match_parent"
                        android:textColor="#C0C0C0"
                        android:layout_height="wrap_content"
                        android:text="AB-" />

                    <RadioButton
                        android:id="@+id/oPosRadioButton"
                        android:layout_width="match_parent"
                        android:textColor="#C0C0C0"
                        android:layout_height="wrap_content"
                        android:text="O+" />

                    <RadioButton
                        android:id="@+id/oNegRadioButton"
                        android:layout_width="match_parent"
                        android:textColor="#C0C0C0"
                        android:layout_height="wrap_content"
                        android:text="O-" />

                </LinearLayout>

            </LinearLayout>

        </RadioGroup>

        <Button
            android:id="@+id/submitButton"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:textColor="#000000"
            android:layout_margin="10dp"
            android:background="@drawable/roundbutton"
            android:paddingStart="30dp"
            android:paddingEnd="30dp"
            android:text="Submit" />
    </LinearLayout>
</ScrollView>