<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.himanshu.android.blooddonate">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.CALL_PHONE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:roundIcon="@drawable/icon"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".DonateBloodActivity"
            android:label="@string/title_activity_donate_blood"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".NeedBloodActivity"
            android:label="@string/title_activity_need_blood"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".DonorDetailsActivity"
            android:label="@string/title_activity_donor_details"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".AccepterDetailsActivity"
            android:label="@string/title_activity_accepter_details"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".RequiredBlood"
            android:label="@string/title_activity_required_blood"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".DonorTerms"
            android:label="@string/title_activity_donor_terms"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".AccepterTerms"
            android:label="@string/title_activity_accepter_terms"
            android:theme="@style/AppTheme.NoActionBar"/>
    </application>

</manifest>